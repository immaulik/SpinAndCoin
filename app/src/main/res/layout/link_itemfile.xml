<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:n2="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <androidx.cardview.widget.CardView xmlns:n2="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        n2:cardElevation="5dp"
        android:dividerHeight="0.0px"
        android:clipToPadding="false"
        android:clipChildren="false"
        n2:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/l1"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:fontFamily="@font/latomedium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:textSize="9dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/date"
                    android:fontFamily="@font/latomedium"
                    android:textColor="#000" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                n2:cardElevation="5dp"
                android:layout_marginRight="10dp"
                n2:cardCornerRadius="10dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Get Links"
                android:id="@+id/button"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold"
                android:background="@color/toolbar1"
                android:fontFamily="@font/latomedium"
                />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

</LinearLayout>